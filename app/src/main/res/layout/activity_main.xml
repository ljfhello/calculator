<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="right|bottom"
        android:background="@drawable/white_bg"
        android:editable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="C"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="DEL"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_chu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="/"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_cheng"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="7"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="8"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="9"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_jian"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="4"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="5"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="6"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>

        <Button
            android:id="@+id/btn_jia"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="+"
            android:textSize="20dp"
            android:background="@drawable/white_seletor"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textSize="20dp"
                    android:background="@drawable/white_seletor"/>
                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="2"
                    android:textSize="20dp"
                    android:background="@drawable/white_seletor"/>
                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="3"
                    android:textSize="20dp"
                    android:background="@drawable/white_seletor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="20dp"
                    android:background="@drawable/white_seletor"/>
                <Button
                    android:id="@+id/btn_dian"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="."
                    android:textSize="20dp"
                    android:background="@drawable/white_seletor"
                    />
                </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_deng"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="="
            android:textSize="20dp"
            android:background="@drawable/orange_seletor"
            />
    </LinearLayout>
</LinearLayout>
